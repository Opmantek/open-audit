{
    "name": "codeigniter4/appstarter",
    "description": "CodeIgniter4 starter app",
    "license": "MIT",
    "type": "project",
    "homepage": "https://codeigniter.com",
    "support": {
        "forum": "http://forum.codeigniter.com/",
        "source": "https://github.com/codeigniter4/CodeIgniter4",
        "slack": "https://codeigniterchat.slack.com"
    },
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-gettext": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-ldap": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "ext-snmp": "*",
        "ext-openssl": "*",
        "aws/aws-sdk-php": "^3.281",
        "codeigniter4/framework": "4.6.3.0",
        "doctrine/instantiator": "1.5.0",
        "foxworth42/oauth2-okta": "^1.0",
        "google/auth": "^1.28",
        "gravitypdf/querypath": "^4.1",
        "kint-php/kint": "^5.0",
        "laminas/laminas-escaper": "2.17.0",
        "league/oauth2-client": "^2.7",
        "league/oauth2-github": "^3.1",
        "masterminds/html5": "^2.9",
        "paragonie/random_compat": "^2.0",
        "paragonie/sodium_compat": "^1.24",
        "phpoffice/phpspreadsheet": "^4.3",
        "phpseclib/phpseclib": "^3.0",
        "psr/cache": "1.0.1",
        "symfony/deprecation-contracts": "2.5.2",
        "thenetworg/oauth2-azure": "^2.2"
    },
    "require-dev": {
        "codeigniter/coding-standard": "^1.8",
        "ergebnis/composer-normalize": "^2.49",
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.6",
        "vimeo/psalm":  "^6.15"
    },
    "suggest": {
        "ext-fileinfo": "Improves mime type detection for files"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "audit": {
            "ignore": {
                "PKSA-64jn-3d9t-gncx": "PhpSpreadsheet vulnerable to SSRF when reading a document in the browser",
                "PKSA-cncr-q695-v65g": "Uses insecure CSPRNG openssl_random_pseudo_bytes"
            }
        }
    },
    "scripts": {
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:check": "psalm",
        "psalm:report": "psalm --report=.report/psalm.xml  --report-show-info=false --show-info=false",
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --colors=always --coverage-text --display-all-issues",
        "test:report": "phpunit --do-not-cache-result --log-junit=.report/phpunit.xml --coverage-clover=.report/coverage-clover.xml --coverage-cobertura=.report/coverage-cobertura.xml --colors=never --coverage-text"
    }
}
